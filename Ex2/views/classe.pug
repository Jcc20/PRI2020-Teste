extends layout

block content
 .w3-card-4
  header.w3-container.w3-red
   h1 Classe
  table.w3-table-all
    tr
      th Nivel
      th Codigo
      th Titulo
      th Descrição
      th Status
    tr
      td= cla.nivel
      td= cla.codigo
      td= cla.titulo
      td= cla.descricao
      td= cla.status
 .w3-card-4
  header.w3-container.w3-red
   h1 Filhos
  table.w3-table-all
     tr
       th Codigo
       th Titulo
       th Id
       th Status
     each f in cla.filhos
       tr
         td
           a(href='/classes/c' + f.codigo) #{f.codigo}
         td= f.titulo
         td= f.id
         td= f.status
  .w3-card-4
  header.w3-container.w3-red
   h1 Notas
  table.w3-table-all
     tr
       th IdNota
       th Notas
     each f in cla.notasEx
       tr
         td= f.idNota
         td= f.nota      
  a(href=`/classes`) 
    button(class="w3-btn w3-teal" type="submit" style="margin:20px") Voltar ao inicio
  a(href=`/classes/c`+ cla.pai.codigo) 
    button(class="w3-btn w3-teal" type="submit" style="margin:20px") Voltar atrás